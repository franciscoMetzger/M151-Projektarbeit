@model IEnumerable<Skivermietung.Models.Kategorie>

@{
    ViewBag.Title = "Kategorien";
}

<h2>Kategorien</h2>

<p>
    @Html.ActionLink("Neue Kategorie erfassen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bezeichnung)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Bezeichnung)
        </td>
        <td>
            @Html.ActionLink("Anpassen", "Edit", new { id=item.ID_Kategorie }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_Kategorie }) |
            @Html.ActionLink("Löschen", "Delete", new { id=item.ID_Kategorie })
        </td>
    </tr>
}

</table>
